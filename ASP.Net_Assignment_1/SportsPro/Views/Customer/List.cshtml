@model List<Customer>
   
@{
    ViewData["Title"] = "Customer Manager";
}
<h1>Customer Manager</h1>


<table class="table table-bordered">
    <thead class="thead-dark">
        <tr class="table table-hover">
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">City</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.City</td>

                <td>
                    <a asp-controller="Customer" asp-action="Edit"
                       asp-route-id="@customer.CustomerID" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-controller="Customer" asp-action="Delete"
                       asp-route-id="@customer.CustomerID" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }

    </tbody>

</table>
<a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add Customer</a>
